@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="row">
    <div class="col-md-4 border">
        <section>
            <form id="account" method="post">
               
                <h4 class="m-2 text-center">Iniciar sesion</h4>
                <br />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    
                    <input asp-for="Input.Email" placeholder="Correo" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    
                    <input asp-for="Input.Password" placeholder="Contraseña" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary form-control" style="border-radius:0">Acceder</button>
                </div>
               
            </form>
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

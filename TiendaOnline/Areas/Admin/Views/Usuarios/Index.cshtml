@model IEnumerable<TiendaOnline.Models.Models.Usuario>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<div class=" row">

    <div class="col-6">
        <div>
            <h5>Usuarios</h5>
        </div>
    </div>
    
    <div class="col-6">
        <div class="float-right">
            <a class="btn btn-success text-white" style="border-radius:0"  asp-page="/Account/Register" asp-area="Identity"><i class="fas fa-plus"></i> Registrar nuevo Usuario </a>
        </div>
        </div>

</div>

<div class="row">
    @if (Model.Count() > 0) 
    {<table class="table table-bordered table-striped ">
         <tr class="table-secondary">
             <th>@Html.DisplayNameFor(m => m.Email)</th>
             <th>@Html.DisplayNameFor(m => m.Nombre)</th>
             <th>@Html.DisplayNameFor(m => m.Ciudad)</th>
             <th>@Html.DisplayNameFor(m => m.PhoneNumber)</th>
             <th></th>
         </tr>
    @foreach(var item in Model)
                {<tr>
    <td>@Html.DisplayFor(m => item.Email)</td>
    <td>@Html.DisplayFor(m => item.Nombre)</td>
    <td>@Html.DisplayFor(m => item.Ciudad)</td>
    <td>@Html.DisplayFor(m => item.PhoneNumber)</td>
    <td>
        @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
        {
            <a class="btn btn-success" asp-action="Bloquear" asp-route-id="@item.Id" ><i class="fas fa-lock-open"></i> </a>

        }
        else
        {
            <a class="btn btn-danger" asp-action="Desbloquear" asp-route-id="@item.Id"><i class="fas fa-lock-open"></i> </a>
        }

    </td>
   
</tr>



                }
</table>
    
    
    }
</div>

